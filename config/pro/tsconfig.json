{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "../../lib",
    "outDir": "../../lib",
    "typeRoots": [ "../../node_modules/@types"]
  },
  "include": ["../../components"],
  "exclude": ["../../lib", "../../node_modules"]
}
